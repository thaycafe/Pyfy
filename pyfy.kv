<Playlists>:
    FloatLayout:
        ActionBar:
            pos_hint:{'top':1}
            background_image: 'src/white-bg.png'
            background_color:C("#FF4900")
            ActionView:
                ActionPrevious:
                    title: 'PYFY'
                    with_previous: False
                
        
        Label:
            text:'Suas playlists'
            pos_hint:{'center_x':.5, 'center_y':.85}
            color:C('#000000')
            font_size:dp(24)

        ScrollView:
            size_hint:.8, .6
            pos_hint:{'center_x':.5, 'center_y':.5}
            
            
            GridLayout:
                id:grid
                cols:1
                size_hint_y:None
                row_default_height: '70dp'
                height: self.minimum_height
                spacing: 8

        Button:
            text:"Add playlist"
            font_name:'src/Roboto-Light.ttf'
            size_hint:.4, .09
            bold:True
            pos_hint:{'center_x':.5, 'center_y':.13}
            font_size:sp(24)
            on_press:  root.manager.current='addplay'

<AddPlay>:
    FloatLayout:
        ActionBar:
            pos_hint:{'top':1}
            background_image: 'src/white-bg.png'
            background_color:C("#FF4900")
            ActionView:
                ActionPrevious:
                    title: 'PYFY'
                    with_previous: False
        
        Label:
            text:'Adicionar nova Playlist'
            font_name:'src/coolveticarg.ttf'
            # pos_hint:{'center_x':.5, 'center_y':.4}
            pos_hint:{'center_x':.5, 'center_y':.75}
            font_size:sp(32)
            color:C('#000000')
        
        TextInput:
            hint_text:"Digite o nome da Playlist:"
            id:playlist
            font_name:'src/Roboto-Light.ttf'
            font_size:sp(24)
            pos_hint:{'center_x':.5, 'center_y':.5}
            size_hint:(.4, .1)
            halign:"center"
            multiline:False

        Button:
            text:'Adicionar'
            font_name:'src/Roboto-Light.ttf'
            size_hint:.3, .09
            pos_hint:{'center_x':.5, 'center_y':.25}
            font_size:sp(24)
            on_press:root.criar_play(playlist.text)

<Play>:
    FloatLayout:
        id:float
        ActionBar:
            pos_hint:{'top':1}
            background_image: 'src/white-bg.png'
            background_color:C("#FF4900")
            ActionView:
                ActionPrevious:
                    title: 'PYFY'
                    on_press: root.manager.current='playlists'
        
        Label:
            id:nome_playlist
            pos_hint:{'center_x':.5, 'center_y':.85}
            color:C('#000000')
            font_size:dp(24)

        ScrollView:
            size_hint:.8, .6
            pos_hint:{'center_x':.5, 'center_y':.5}
            
            GridLayout:
                id:grid_play
                cols:1
                size_hint_y:None
                row_default_height: '70dp'
                height: self.minimum_height
                spacing: 8
            
        Button:
            text:"Add música"
            font_name:'src/Roboto-Light.ttf'
            size_hint:.4, .09
            bold:True
            pos_hint:{'center_x':.5, 'center_y':.13}
            font_size:sp(24)
            on_press:root.add_musica()
            
        
<AddMusica>:
