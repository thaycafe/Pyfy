            pos_hint:{'center_x':.5, 'center_y':.8}
            font_size:sp(32)
            color:C('#000000')
        
        TextInput:
            hint_text:"Digite o nome da Música:"
            id:nome_musica
            font_name:'src/Roboto-Light.ttf'
            font_size:sp(24)
            pos_hint:{'center_x':.5, 'center_y':.60}
            size_hint:(.4, .1)
            halign:"center"
            multiline:False
        TextInput:
            hint_text:"Digite o nome do Artista:"
            id:nome_artista
            font_name:'src/Roboto-Light.ttf'
            font_size:sp(24)
            pos_hint:{'center_x':.5, 'center_y':.49}
            size_hint:(.4, .1)
            halign:"center"
            multiline:False
        TextInput:
            hint_text:"Digite o nome do Gênero:"
            id:nome_genero
            font_name:'src/Roboto-Light.ttf'
            font_size:sp(24)
            pos_hint:{'center_x':.5, 'center_y':.38}
            size_hint:(.4, .1)
            halign:"center"
            multiline:False

        Button:
            text:'Adicionar'
            font_name:'src/Roboto-Light.ttf'
            size_hint:.3, .09
            pos_hint:{'center_x':.5, 'center_y':.2}
            font_size:sp(24)
            on_press: root.add()



        
